---
// Navigation.astro
const siteName = "Seoul Pet Rescue";
const navLinks = [
  { name: "Home", href: "/" },
  { name: "Services", href: "/services" },
  { name: "Blog", href: "/blog" }
];
---

<nav class="bg-[#D6C563] shadow-lg">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-[#4F772D] flex items-center">
        <span class="mr-2">üêæ</span>
        {siteName}
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex gap-6">
        {navLinks.map((link) => (
          <a 
            href={link.href} 
            class="text-[#4F772D] hover:text-[#3a5a20] font-medium transition-colors duration-200"
          >
            {link.name}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button 
          type="button" 
          class="text-[#4F772D] focus:outline-none"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Navigation (hidden by default) -->
    <div class="hidden md:hidden mt-4 pb-4">
      <div class="flex flex-col gap-3">
        {navLinks.map((link) => (
          <a 
            href={link.href} 
            class="text-[#4F772D] hover:text-[#3a5a20] font-medium py-2 transition-colors duration-200"
          >
            {link.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<style>
  /* Mobile menu toggle functionality would require client-side JS */
  /* This can be added in a script tag or separate JS file */
</style>